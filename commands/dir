#!/bin/bash

command_dir(){
    local PROJ_NAME=${1}

    if [[ -n ${PROJ_NAME} && "" != ${PROJ_NAME} ]]; then
        local PROJ_DIR=$(project_directory ${PROJ_NAME})

        if [ -d ${PROJ_DIR} ]; then
            if [ -d ${PROJ_DIR}/.proj ]; then
                echo ${PROJ_DIR}
            else
                echo "The ${PROJ_NAME} project appears to be located at ${PROJ_DIR}, but is not currently tracked by proj."
                return 66
            fi
        else
            echo "The ${PROJ_NAME} project doesn't exist in directory ${PROJ_DIR}."
            return 65
        fi
    else
        echo ${PROJ_PROJECTS_HOME}
    fi
}

command_dir_help(){
    echo "USAGE"
    echo "   ${PROGRAM_NAME} dir [<project_name>]"
    echo ""
    echo "DESCRIPTION"
    echo "   The 'dir' command can be used to output a project directory using the project's name.  If no project name is provided, the base project directory will be printed."
}

command_dir_help_short(){
    echo "Displays a project's directory."
}
